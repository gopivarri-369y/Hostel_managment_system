        /* For the .home-button */
.home-button {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    color: #3498db;
    text-decoration: none;
    border: 2px solid #3498db;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 500;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    z-index: 1;
    transition: color 0.3s ease;
}

.home-button::before {
    position: absolute;
    content: "";
    background: #3498db;
    width: 150px;
    height: 150px;
    top: 100%;
    left: 100%;
    transition: 0.3s all;
    border-radius: 50%;
    z-index: -1;
}

.home-button:hover {
    color: white;
}

.home-button:hover::before {
    top: -30px;
    left: -30px;
}


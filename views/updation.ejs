<body>
    <div class="container">
        <div class="header">
            <a href="/" class="home-button">‚Üê Back to Home</a>
            <h2>Update Hostel Details</h2>
        </div>

        <div class="form-container">
            <form action="/updated/<%= owners.owner_id %>?_method=PATCH" method="POST" class="form">
                <!-- Add method override hidden input -->
                <input type="hidden" name="_method" value="PATCH">

                <div class="form-group">
                    <label for="college">Nearest College:</label>
                    <input type="text" id="college" name="college" value="<%= owners.college %>" required placeholder="Enter the nearest college name">
                </div>

                <div class="form-group">
                    <label for="hostel_name">Hostel Name:</label>
                    <input type="text" id="hostel_name" name="hostel_name" value="<%= owners.hostel_name %>" required placeholder="Enter the hostel name">
                </div>

                <div class="form-group">
                    <label for="roomsfor">Room For:</label>
                    <select id="roomsfor" name="roomsfor">
                        <option value="boys" <%= owners.roomsfor === 'boys' ? 'selected' : '' %>>Boys</option>
                        <option value="girls" <%= owners.roomsfor === 'girls' ? 'selected' : '' %>>Girls</option>
                    </select>
                </div>

                <div class="room-section">
                    <div class="room-title">2 Share Room Details</div>
                    <div class="form-group">
                        <label for="twoshare">Number of 2 Share Rooms:</label>
                        <input type="number" id="twoshare" name="twoshare" value="<%= owners.twoshare %>" min="0" placeholder="Enter number of rooms or 0">
                    </div>
                    <div class="form-group">
                        <label for="tworent">2 Share Room Rent:</label>
                        <input type="number" id="tworent" name="tworent" value="<%= owners.tworent %>" min="0" placeholder="Enter room rent or 0">
                    </div>
                </div>

                <div class="room-section">
                    <div class="room-title">3 Share Room Details</div>
                    <div class="form-group">
                        <label for="threeshare">Number of 3 Share Rooms:</label>
                        <input type="number" id="threeshare" name="threeshare" value="<%= owners.threeshare %>" min="0" placeholder="Enter number of rooms or 0">
                    </div>
                    <div class="form-group">
                        <label for="threerent">3 Share Room Rent:</label>
                        <input type="number" id="threerent" name="threerent" value="<%= owners.threerent %>" min="0" placeholder="Enter room rent or 0">
                    </div>
                </div>

                <div class="room-section">
                    <div class="room-title">4 Share Room Details</div>
                    <div class="form-group">
                        <label for="fourshare">Number of 4 Share Rooms:</label>
                        <input type="number" id="fourshare" name="fourshare" value="<%= owners.fourshare %>" min="0" placeholder="Enter number of rooms or 0">
                    </div>
                    <div class="form-group">
                        <label for="fourrent">4 Share Room Rent:</label>
                        <input type="number" id="fourrent" name="fourrent" value="<%= owners.fourrent %>" min="0" placeholder="Enter room rent or 0">
                    </div>
                </div>

                <button type="submit" class="submit-btn">Update Details</button>
            </form>
        </div>
    </div>
</body>
